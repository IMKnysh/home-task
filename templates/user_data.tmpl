#!/usr/bin/env bash

yum update -y
yum install -y docker

usermod -a -G docker ec2-user
service docker start

inst_IP=`curl --silent --show-error --location http://169.254.169.254/latest/meta-data/local-ipv4/`
docker run -d --net=host -e 'CONSUL_LOCAL_CONFIG={"skip_leave_on_interrupt": true}' consul agent -server -ui -retry-join "provider=aws tag_key=Tag tag_value=Consul-srv" -bootstrap-expect=${var.count_srv}